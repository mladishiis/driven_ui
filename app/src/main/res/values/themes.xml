<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- <style name="Theme.DrivenUI" parent="android:Theme.Material.Light.NoActionBar" />  -->

    <!-- Base application theme. -->
    <style name="Theme.DrivenUI" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Для совместимости с MaterialAlertDialogBuilder -->
        <item name="android:alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
        <item name="android:alertDialogStyle">@style/MaterialAlertDialog.Material3</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.Material3.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>