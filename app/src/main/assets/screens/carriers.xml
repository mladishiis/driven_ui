<?xml version="1.0" encoding="UTF-8"?>
<screen title="Перевозчики">
    <screenCode>carriers</screenCode>
    <screenShortCode>с</screenShortCode>
    <deeplink>https://www.online.vtb.ru/i/ma/maT/с</deeplink>
    <screenQueries>
        <screenQuery>
            <screenQueryCode>carriers_allCarriers</screenQueryCode>
            <screenCode>carriers</screenCode>
            <queryCode>allCarriers</queryCode>
            <mockEnabled>true</mockEnabled>
            <mockFile>carriers_list.json</mockFile>
            <properties></properties>
            <order>1</order>
        </screenQuery>
    </screenQueries>
    <screenLayout title="Перевозчики">
        <screenLayoutCode>carriers_carriers</screenLayoutCode>
        <layoutCode>layers</layoutCode>
        <screenLayoutIndex>1</screenLayoutIndex>
        <properties>
            <property>
                <code>width</code>
                <value>fillMax</value>
            </property>
            <property>
                <code>height</code>
                <value>fillMax</value>
            </property>
        </properties>
        <styles>
            <style>
                <code>colorStyle</code>
                <value>surface</value>
            </style>
        </styles>
        <events>
            <event>
                <event_code>onCreate</event_code>
                <order>1</order>
                <eventActions>
                    <eventAction>
                        <code>query</code>
                        <order>1</order>
                        <properties>
                            <property>
                                <code>screenQueryCode</code>
                                <value>carriers_allCarriers</value>
                            </property>
                        </properties>
                    </eventAction>
                </eventActions>
            </event>
        </events>
        <screenLayout title="Перевозчики. Верх">
            <screenLayoutCode>carriers_appbar</screenLayoutCode>
            <layoutCode>vertical</layoutCode>
            <screenLayoutIndex>1</screenLayoutIndex>
            <properties>
                <property>
                    <code>width</code>
                    <value>fillMax</value>
                </property>
                <property>
                    <code>height</code>
                    <value>wrapContent</value>
                </property>
            </properties>
            <styles>
                <style>
                    <code>alignmentStyle</code>
                    <value>alignTop</value>
                </style>
                <style>
                    <code>paddingStyle</code>
                    <value>padding0-0-0-92</value>
                </style>
            </styles>
            <screenLayout title="Перевозчики. Заголовок. Аппбар виджет">
                <screenLayoutCode>carriers_appbar</screenLayoutCode>
                <layoutCode>horizontal</layoutCode>
                <screenLayoutIndex>1</screenLayoutIndex>
                <properties>
                    <property>
                        <code>width</code>
                        <value>fillMax</value>
                    </property>
                    <property>
                        <code>height</code>
                        <value>wrapContent</value>
                    </property>
                </properties>
                <styles>
                    <style>
                        <code>alignmentStyle</code>
                        <value>alignTop</value>
                    </style>
                </styles>
                <screenLayoutWidget title="Перевозчики. Заголовок. Аппбар виджет">
                    <screenLayoutWidgetCode>carriers_appbar_widget</screenLayoutWidgetCode>
                    <widgetCode>appbar</widgetCode>
                    <properties>
                        <property>
                            <code>title</code>
                            <value>Перевозчики</value>
                        </property>
                        <property>
                            <code>leftIconUrl</code>
                            <value>previousScreen.svg</value>
                        </property>
                        <property>
                            <code>scrollBehavior</code>
                            <value>pinned</value>
                        </property>
                        <property>
                            <code>width</code>
                            <value>fillMax</value>
                        </property>
                        <property>
                            <code>height</code>
                            <value>wrapContent</value>
                        </property>
                    </properties>
                    <styles>
                        <style>
                            <code>textStyle</code>
                            <value>titleLarge22</value>
                        </style>
                        <style>
                            <code>colorStyle</code>
                            <value>on-surface</value>
                        </style>
                        <style>
                            <code>alignmentStyle</code>
                            <value>alignCenter</value>
                        </style>
                    </styles>
                    <events>
                        <event>
                            <event_code>onTap</event_code>
                            <order>1</order>
                            <eventActions>
                                <eventAction>
                                    <code>navigateBack</code>
                                    <order>1</order>
                                    <properties>
                                        <property>
                                            <code>screenCode</code>
                                            <value>cardActivate</value>
                                        </property>
                                    </properties>
                                </eventAction>
                            </eventActions>
                        </event>
                    </events>
                </screenLayoutWidget>
            </screenLayout>
            <screenLayout title="Перевозчики. Список">
                <screenLayoutCode>carriers_list</screenLayoutCode>
                <layoutCode>verticalFor</layoutCode>
                <screenLayoutIndex>2</screenLayoutIndex>
                <forIndexName>carrier_index</forIndexName>
                <maxForIndex>${carriers_allCarriers.count}</maxForIndex>
                <properties>
                    <property>
                        <code>width</code>
                        <value>fillMax</value>
                    </property>
                    <property>
                        <code>height</code>
                        <value>wrapContent</value>
                    </property>
                </properties>
                <screenLayout title="Перевозчики. Список. Элемент carrier_index">
                    <screenLayoutCode>carriers_list_{#carrier_index}</screenLayoutCode>
                    <layoutCode>horizontal</layoutCode>
                    <screenLayoutIndex>{#carrier_index}</screenLayoutIndex>
                    <properties>
                        <property>
                            <code>width</code>
                            <value>fillMax</value>
                        </property>
                        <property>
                            <code>height</code>
                            <value>wrapContent</value>
                        </property>
                    </properties>
                    <styles>
                        <style>
                            <code></code>
                            <value></value>
                        </style>
                    </styles>
                    <screenLayoutWidget
                        title="Перевозчики. Список. Элемент carrier_index. Текст виджет">
                        <screenLayoutWidgetCode>carriers_list_{#carrier_index}_label_widget
                        </screenLayoutWidgetCode>
                        <widgetCode>label</widgetCode>
                        <properties>
                            <property>
                                <code>text</code>
                                <value>${carriers_allCarriers.[{#carrier_index}].carrierName}</value>
                            </property>
                            <property>
                                <code>width</code>
                                <value>fillMax</value>
                            </property>
                            <property>
                                <code>height</code>
                                <value>wrapContent</value>
                            </property>
                        </properties>
                        <styles>
                            <style>
                                <code>textStyle</code>
                                <value>titleLarge22</value>
                            </style>
                            <style>
                                <code>colorStyle</code>
                                <value>on-surface</value>
                            </style>
                            <style>
                                <code>alignmentStyle</code>
                                <value>alignLeft</value>
                            </style>
                            <style>
                                <code>paddingStyle</code>
                                <value>padding16-12-16-12</value>
                            </style>
                        </styles>
                    </screenLayoutWidget>
                </screenLayout>
            </screenLayout>
        </screenLayout>
        <screenLayout title="Перевозчики. Кнопка виджет">
            <screenLayoutCode>carriers_button</screenLayoutCode>
            <layoutCode>horizontal</layoutCode>
            <screenLayoutIndex>3</screenLayoutIndex>
            <properties>
                <property>
                    <code>width</code>
                    <value>fillMax</value>
                </property>
                <property>
                    <code>height</code>
                    <value>wrapContent</value>
                </property>
            </properties>
            <styles>
                <style>
                    <code>alignmentStyle</code>
                    <value>alignBottom</value>
                </style>
            </styles>
            <screenLayoutWidget title="Перевозчики. Кнопка виджет">
                <screenLayoutWidgetCode>carriers_button_widget</screenLayoutWidgetCode>
                <widgetCode>button</widgetCode>
                <properties>
                    <property>
                        <code>text</code>
                        <value>+ Добавить перевозчика</value>
                    </property>
                    <property>
                        <code>width</code>
                        <value>fillMax</value>
                    </property>
                    <property>
                        <code>height</code>
                        <value>60</value>
                    </property>
                </properties>
                <events>
                    <event>
                        <event_code>onTap</event_code>
                        <order>1</order>
                        <eventActions>
                            <eventAction>
                                <code>openScreen</code>
                                <order>1</order>
                                <properties>
                                    <property>
                                        <code>screenCode</code>
                                        <value>cardActivate</value>
                                    </property>
                                </properties>
                            </eventAction>
                        </eventActions>
                    </event>
                </events>
                <styles>
                    <style>
                        <code>textStyle</code>
                        <value>titleLarge22</value>
                    </style>
                    <style>
                        <code>colorStyle</code>
                        <value>on-primary</value>
                    </style>
                    <style>
                        <code>backgroundColorStyle</code>
                        <value>primary</value>
                    </style>
                    <style>
                        <code>alignmentStyle</code>
                        <value>alignCenter</value>
                    </style>
                    <style>
                        <code>roundStyle</code>
                        <value>radius16</value>
                    </style>
                    <style>
                        <code>paddingStyle</code>
                        <value>padding24-16-24-16</value>
                    </style>
                </styles>
            </screenLayoutWidget>
        </screenLayout>
    </screenLayout>
</screen>